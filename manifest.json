{
	"manifest_version": 3,
	"name": "Find sus link",
	"version": "1.0",
	"description": "Ad-blocker extension for Chrome",
	"icons": {
		"16": "assets/susguardlogo-16.png",
		"32": "assets/susguardlogo-32.png",
		"48": "assets/susguardlogo-48.png",
		"128": "assets/susguardlogo-128.png"
	  },
	"permissions": [
        "activeTab",
        "tabs",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
	"declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }]
    },
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js", "detectPopups.js"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
		  "16": "images/icon16.png"
		}
	},
	"web_accessible_resources": [
		{
			"resources": ["warning.html", "warning.js"],
			"matches": ["<all_urls>"]
		}
	]
}